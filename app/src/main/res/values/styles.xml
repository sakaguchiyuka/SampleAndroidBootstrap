<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:bootstrap="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="FontAwesomeText" parent="CommonText"></style>

    <style name="BootstrapButton" parent="CommonText">
        <item name="bb_roundedCorners">true</item>
        <item name="bb_size">large</item>
    </style>

    <style name="BootstrapButton.Default">
        <item name="bb_type">default</item>
    </style>

    <style name="BootstrapButton.Primary">
        <item name="bb_type">primary</item>
    </style>

    <style name="BootstrapButton.Success">
        <item name="bb_type">success</item>
    </style>

    <style name="BootstrapButton.Info">
        <item name="bb_type">info</item>
    </style>

    <style name="BootstrapButton.Warning">
        <item name="bb_type">warning</item>
    </style>

    <style name="BootstrapButton.Danger">
        <item name="bb_type">danger</item>
    </style>

</resources>